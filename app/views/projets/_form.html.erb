
<%= simple_form_for(@projet) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name_structure %>
    <%= f.input :title %>
    <%= f.input :url %>
    <%= f.input :keywords %>
    <%= f.input :difficulty %>
    <%= f.input :date %>
    <%= f.input :live %>
    <%= f.input :synopsis %>
    <%= f.input :image %>
    <%= f.input :territory %>
    <%= f.input :duration %>
    <%= f.input :stars %>
    <%= f.input :stars_text %>
    <%= f.association :theme %>
    <%= f.association :target %>
    <%= f.association :form %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
