<div class="container mt-5">
<p id="notice"><%= notice %></p>

<h1>Projets</h1>

<table>
  <thead>
    <tr>
      <th>Name structure</th>
      <th>Title</th>
      <th>Url</th>
      <th>Keywords</th>
      <th>Difficulty</th>
      <th>Date</th>
      <th>Live</th>
      <th>Synopsis</th>
      <th>Image</th>
      <th>Territory</th>
      <th>Duration</th>
      <th>Stars</th>
      <th>Double</th>
      <th>Stars text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projets.each do |projet| %>
      <tr>
        <td><%= projet.name_structure %></td>
        <td><%= projet.title.first(30) %></td>
        <td><%= projet.url %></td>
        <td><%= projet.keywords.first(30) if projet.keywords %></td>
        <td><%= projet.difficulty %></td>
        <td><%= projet.date %></td>
        <td><%= projet.live %></td>
        <td><%= projet.synopsis.first(30)%></td>
        <td><%= projet.image %></td>
        <td><%= projet.territory %></td>
        <td><%= projet.duration %></td>
        <td><%= projet.stars %></td>
        <td><%= projet.double %></td>
        <td><%= projet.stars_text %></td>
        <td><%= link_to 'Show', projet %></td>
        <td><%= link_to 'Edit', edit_projet_path(projet) %></td>
        <td><%= link_to 'Destroy', projet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Projet', new_projet_path %>
</div>